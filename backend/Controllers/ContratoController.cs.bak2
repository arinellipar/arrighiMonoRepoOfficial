        private string GerarHTMLContrato(Contrato contrato, int numeroSequencial)
        {
            var nomeCliente = System.Net.WebUtility.HtmlEncode(contrato.Cliente?.PessoaFisica?.Nome ??
                              contrato.Cliente?.PessoaJuridica?.RazaoSocial ??
                              "Cliente nao identificado");

            var cpfCnpj = contrato.Cliente?.PessoaFisica?.Cpf ??
                          contrato.Cliente?.PessoaJuridica?.Cnpj ??
                          "N/A";

            var nomeConsultor = System.Net.WebUtility.HtmlEncode(contrato.Consultor?.PessoaFisica?.Nome ?? "Nao informado");
            var filialConsultor = System.Net.WebUtility.HtmlEncode(contrato.Consultor?.Filial?.Nome ?? "Nao informada");

            var sb = new System.Text.StringBuilder();
            
            // Construir HTML
            sb.Append("<!DOCTYPE html>");
            sb.Append("<html><head><meta charset=\"UTF-8\">");
            sb.Append("<title>Contrato ").Append(numeroSequencial).Append("</title>");
